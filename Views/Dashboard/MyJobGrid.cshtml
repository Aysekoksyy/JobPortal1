@model List<JobPortal1.Models.JobPost>

<h2>Yayınlanan İlanlar</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Lokasyon</th>
            <th>Çalışma Şekli</th>
            <th>Tarih</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Location</td>
                <td>@item.WorkplaceType</td>
                <td>@item.CreatedAt.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
