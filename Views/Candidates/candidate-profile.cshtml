@model JobPortal1.Models.Candidate

@{
    ViewData["Title"] = "Aday Başvuru";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="msapplication-TileColor" content="#0E0E0E">
    <meta name="template-color" content="#0E0E0E">
    <link rel="manifest" href="manifest.json" crossorigin>
    <meta name="msapplication-config" content="browserconfig.xml">
    <meta name="description" content="Index page">
    <meta name="keywords" content="index, page">
    <meta name="author" content="">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/imgs/template/favicon.svg">
    <link href="~/assets/css/style.css?version=4.1" rel="stylesheet">
</head>
<section class="section-box mt-50 mb-50">
    <div class="container">
        <div class="box-white box-shadow">
            <h3 class="text-center mb-30">Aday Başvuru Formu</h3>

            @using (Html.BeginForm("CandidateProfile", "Candidates", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.FullName)
                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Ad Soyad" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-posta adresiniz" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.Phone)
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "05xx xxx xx xx" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.PersonalWebsite)
                        @Html.TextBoxFor(m => m.PersonalWebsite, new { @class = "form-control", placeholder = "https://..." })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.Country)
                        @Html.TextBoxFor(m => m.Country, new { @class = "form-control" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.State)
                        @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.City)
                        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.ZipCode)
                        @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control" })
                    </div>
                    <div class="col-12 mb-3">
                        @Html.LabelFor(m => m.Bio)
                        @Html.TextAreaFor(m => m.Bio, new { @class = "form-control", rows = 3, placeholder = "Kendinizden bahsedin..." })
                    </div>
                    <div class="col-12 mb-3">
                        @Html.LabelFor(m => m.Skills)
                        @Html.TextBoxFor(m => m.Skills, new { @class = "form-control" })
                    </div>
                    <div class="col-12 mb-3">
                        <label>CV Yükle</label>
                        <input type="file" name="ResumeFile" class="form-control" />
                        @if (!string.IsNullOrEmpty(Model?.ResumeFileName))
                        {
                            <p class="mt-2">Yüklü Dosya: <strong>@Model.ResumeFileName</strong></p>
                        }
                    </div>
                    <div class="col-12 mt-3">
                        <button type="submit" class="btn btn-default hover-up w-100">Başvuruyu Gönder</button>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<section class="section-box mt-50 mb-20">
            <div class="container">
                <div class="box-newsletter">
                    <div class="row">
                        <div class="col-xl-3 col-12 text-center d-none d-xl-block"><img
                                src="~/assets/imgs/template/newsletter-left.png" alt="joxBox"></div>
                        <div class="col-lg-12 col-xl-6 col-12">
                            <h2 class="text-md-newsletter text-center">Yeni şeyler her zaman<br> düzenli olarak
                                güncellenir</h2>
                            <div class="box-form-newsletter mt-40">
                                <form class="form-newsletter">
                                    <input class="input-newsletter" type="text" value=""
                                        placeholder="E-posta adresinizi buraya girin">
                                    <button class="btn btn-default font-heading icon-send-letter">Abone Ol</button>
                                </form>
                            </div>
                        </div>
                        <div class="col-xl-3 col-12 text-center d-none d-xl-block"><img
                                src="~/assets/imgs/template/newsletter-right.png" alt="joxBox"></div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <footer class="footer mt-50">
        <div class="container">
            <div class="row">
                <div class="footer-col-1 col-md-3 col-sm-12">
                    <a asp-controller="Home" asp-action="Index">
                        <img alt="JobBox Logo" src="~/assets/imgs/template/jobhub-logo.svg">
                    </a>
                    <div class="mt-20 mb-20 font-xs color-text-paragraph-2">
                        JobBox, tasarım topluluğunun kalbidir ve dünya genelindeki tasarımcılar ile iş fırsatlarını keşfetmek ve bağlantı kurmak için en iyi kaynaktır.
                    </div>
                    <div class="footer-social">
                        <a class="icon-socials icon-facebook" href="#"></a>
                        <a class="icon-socials icon-twitter" href="#"></a>
                        <a class="icon-socials icon-linkedin" href="#"></a>
                    </div>
                 </div>
                <div class="footer-col-4 col-md-2 col-xs-6">
                    <h6 class="mb-20">links</h6>
                    <ul class="menu-footer">
                        <li><a href="#">iOS</a></li>
                        <li><a href="#">Android</a></li>
                        <li><a href="#">Microsoft</a></li>
                        <li><a href="#">Desktop</a></li>
                    </ul>
                </div>
                <div class="row">
        
                    <div class="col-md-6 text-md-end text-start">
                        <div class="footer-social"><a class="font-xs color-text-paragraph" href="#">Privacy Policy</a><a
                                class="font-xs color-text-paragraph mr-30 ml-30" href="#">Terms &amp; Conditions</a><a
                                class="font-xs color-text-paragraph" href="#">Security</a></div>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4"></div>
            <a href="/Candidates/CandidateProfile" class="btn btn-brand-1">Geri Dön</a>
        </div>
        </div>
    </footer>
    <script src="~/assets/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="~/assets/js/vendor/jquery-3.6.0.min.js"></script>
    <script src="~/assets/js/vendor/jquery-migrate-3.3.0.min.js"></script>
    <script src="~/assets/js/vendor/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/plugins/waypoints.js"></script>
    <script src="~/assets/js/plugins/wow.js"></script>
    <script src="~/assets/js/plugins/magnific-popup.js"></script>
    <script src="~/assets/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="~/assets/js/plugins/select2.min.js"></script>
    <script src="~/assets/js/plugins/isotope.js"></script>
    <script src="~/assets/js/plugins/scrollup.js"></script>
    <script src="~/assets/js/plugins/swiper-bundle.min.js"></script>
    <script src="~/assets/js/noUISlider.js"></script>
    <script src="~/assets/js/slider.js"></script>
    <script src="~/assets/js/main.js?v=4.1"></script>
</body>

</html>